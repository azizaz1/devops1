pipeline {
  agent any
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
stage('Build') {
            steps {
                // Build your project
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                // Run your tests
                sh 'mvn test'
            }
        }
  stages{
    stage('Scan'){
      steps{
        withSonarQubeEnv(installationName: 'sq1'){
           sh 'mvn sonar:sonar'
        }
      }
    }
  }
}
          
